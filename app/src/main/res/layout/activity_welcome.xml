<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="prathameshshetye.minesweeper.WelcomeActivity"
    android:background="@drawable/intro_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        android:padding="20dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/new_game"
        android:id="@+id/btn_new_game"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:transitionName="@string/trans_new_game"
        android:layout_marginTop="50dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textSize="18sp"
        android:elevation="10dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/load_saved_game"
        android:id="@+id/btn_load_save"
        android:layout_below="@+id/btn_new_game"
        android:layout_centerHorizontal="true"
        android:transitionName="@string/trans_new_game"
        android:visibility="gone"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textSize="18sp"
        android:elevation="10dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/scores"
        android:id="@+id/btn_score"
        android:layout_below="@+id/btn_load_save"
        android:layout_centerHorizontal="true"
        android:transitionName="@string/trans_score"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textSize="18sp"
        android:elevation="10dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:id="@+id/btn_settings"
        android:layout_below="@+id/btn_score"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textSize="18sp"
        android:elevation="10dp" />

    <Button
        android:layout_below="@+id/btn_settings"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/how_to"
        android:id="@+id/btn_how_to"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textSize="18sp"
        android:elevation="10dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/exit"
        android:id="@+id/btn_exit"
        android:layout_below="@+id/btn_how_to"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textSize="18sp"
        android:elevation="10dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background"
        android:scaleType="centerCrop"
        android:src="@drawable/intro_background"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
